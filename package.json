{
  "name": "rapid-prereview",
  "version": "0.0.0",
  "description": "rapid PREreview (outbreak science)",
  "main": "index.js",
  "scripts": {
    "cloudant": "docker restart cloudant-developer",
    "log-cloudant": "docker logs cloudant-developer",
    "extension:watch": "webpack --config webpack-extension.config.js --watch --mode development",
    "extension:build": "NODE_ENV=production webpack --config webpack-extension.config.js --mode production",
    "start": "babel-node ./src/server.js",
    "seed": "babel-node ./scripts/seed.js",
    "ddocs": "babel-node ./scripts/ddocs.js",
    "init": "babel-node ./scripts/init.js",
    "harvest": "babel-node ./scripts/harvest.js",
    "build:client": "rm -rf ./public/assets/* && cross-env NODE_ENV=production webpack --progress",
    "build:server": "rm -rf dist; mkdir dist; babel src -d dist",
    "build": "npm run build:client && npm run build:server",
    "just-test": "cross-env COUCH_DOCS_DB_NAME=test-rapid-prereview-docs COUCH_INDEX_DB_NAME=test-rapid-prereview-index COUCH_USERS_DB_NAME=test-rapid-prereview-users mocha --reporter spec --require @babel/register --exit",
    "test": "cross-env COUCH_DOCS_DB_NAME=test-rapid-prereview-docs COUCH_INDEX_DB_NAME=test-rapid-prereview-index COUCH_USERS_DB_NAME=test-rapid-prereview-users npm run just-test",
    "pretest": "cross-env COUCH_DOCS_DB_NAME=test-rapid-prereview-docs COUCH_INDEX_DB_NAME=test-rapid-prereview-index COUCH_USERS_DB_NAME=test-rapid-prereview-users babel-node ./scripts/init.js",
    "prepare": "npm run build",
    "storybook": "start-storybook -p 3030 -h 127.0.0.1 --ci",
    "build-storybook": "build-storybook -c .storybook -o .out",
    "postversion": "git push && git push --tags"
  },
  "prettier": {
    "singleQuote": true
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": "> 0.25%, not dead"
        }
      ],
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime",
      "@babel/plugin-transform-async-to-generator",
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "mocha": true
    },
    "globals": {
      "chrome": "readonly"
    },
    "plugins": [
      "react",
      "import",
      "react-hooks"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "rules": {
      "no-console": [
        "warn",
        {
          "allow": [
            "error",
            "warn",
            "trace"
          ]
        }
      ],
      "no-unused-vars": [
        "error",
        {
          "args": "none",
          "ignoreRestSiblings": true
        }
      ],
      "no-empty": [
        "error",
        {
          "allowEmptyCatch": true
        }
      ],
      "no-constant-condition": [
        "error",
        {
          "checkLoops": false
        }
      ],
      "no-bitwise": [
        "error",
        {
          "allow": [
            "~"
          ]
        }
      ],
      "no-cond-assign": [
        "error",
        "except-parens"
      ],
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PREreview/rapid-prereview.git"
  },
  "keywords": [
    "outbreak",
    "science",
    "preprint"
  ],
  "author": "Sebastien Ballesteros",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/PREreview/rapid-prereview/issues"
  },
  "homepage": "https://github.com/PREreview/rapid-prereview#readme",
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/node": "^7.6.3",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-transform-async-to-generator": "^7.5.0",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-react": "^7.6.3",
    "@babel/register": "^7.6.2",
    "@storybook/addon-actions": "^5.2.4",
    "@storybook/react": "^5.2.4",
    "@svgr/webpack": "^4.3.3",
    "assets-webpack-plugin": "^3.9.10",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^6.0.3",
    "css-loader": "^3.2.0",
    "duplicate-package-checker-webpack-plugin": "^3.0.0",
    "eslint": "^6.5.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.1.2",
    "faker": "^4.1.0",
    "mini-css-extract-plugin": "^0.8.0",
    "mocha": "^6.2.2",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-nested": "^4.1.2",
    "postcss-preset-env": "^6.7.0",
    "postcss-url": "^8.0.0",
    "prettier": "^1.18.2",
    "style-loader": "^1.0.0",
    "url-loader": "^2.2.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0"
  },
  "dependencies": {
    "@babel/polyfill": "^7.6.0",
    "@babel/runtime": "^7.6.3",
    "@cloudant/cloudant": "^4.2.1",
    "@reach/combobox": "^0.3.0",
    "@reach/dialog": "^0.3.0",
    "@reach/menu-button": "^0.3.0",
    "@reach/tooltip": "^0.3.0",
    "@reach/visually-hidden": "^0.3.0",
    "ajv": "^6.10.2",
    "classnames": "^2.2.6",
    "clipboard-copy": "^3.1.0",
    "concat-stream": "^2.0.0",
    "date-fns": "^2.5.1",
    "doi-regex": "^0.1.10",
    "ejs": "^2.7.1",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "identifiers-arxiv": "^0.1.1",
    "identifiers-orcid": "^0.1.1",
    "jsdom": "^15.2.0",
    "lodash": "^4.17.15",
    "lru-cache": "^5.1.1",
    "match-sorter": "^4.0.2",
    "node-fetch": "^2.6.0",
    "normalize.css": "^8.0.1",
    "orcid-utils": "^1.0.4",
    "passport": "^0.4.0",
    "passport-orcid": "0.0.4",
    "passport-strategy": "^1.0.0",
    "prop-types": "^15.7.2",
    "react": "^16.10.2",
    "react-avatar-editor": "^11.0.7",
    "react-dnd": "^9.4.0",
    "react-dnd-html5-backend": "^9.4.0",
    "react-dom": "^16.10.2",
    "react-dropzone": "^10.1.10",
    "react-icons": "^3.7.0",
    "react-router-dom": "^5.1.2",
    "slug": "^1.1.0",
    "uuid": "^3.3.3",
    "xmldom": "^0.1.27"
  }
}
